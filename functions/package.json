    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsdom": "^22.1.0",
    "puppeteer": "^20.7.4",
    "chart.js": "^4.3.0",
    "chartjs-node-canvas": "^4.1.6",
    "pdfkit": "^0.14.0",
    "exceljs": "^4.4.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.27.5",
    "typescript": "^5.0.2"
  },
  "private": true
